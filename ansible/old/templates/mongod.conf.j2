# Где и как хранить данные

storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

# куда писать лог

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# сетевые интерфейсы

net:
  port: {{ mongo_port | default('27017') }}
  bindIp: {{ mongo_bind_ip }}
